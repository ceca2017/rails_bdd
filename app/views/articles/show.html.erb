<%= @article.title %><br />
<%= @article.content %><br />
<% @article.comments.each do |comment| %>
  <%= comment.comment %><br />
  <%= comment.email %><br />
<% end %>


<%= form_for [@article, @article.comments.new] do |f| %>
  <%= f.label :comment %>
  <%= f.text_field :comment %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.submit 'Submit' %>
<% end %>
